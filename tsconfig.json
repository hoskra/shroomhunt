{
	"compilerOptions": {
		"target": "es2017",
		"skipLibCheck": true,
		"lib": [
			"es6",
			"dom"
		],
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"module": "esnext",
		"outDir": "./build",
		"downlevelIteration": true
	},
	"include": [
		"./src/**/*.ts",
		"./libs/**/*.ts"
	],
	"exclude": [
		"./node_modules",
		"./scripts"
	]
}